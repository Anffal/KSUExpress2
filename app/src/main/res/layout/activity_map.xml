<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="360dp"
        android:layout_height="654dp"
        tools:context="com.example.anfal.ksuexpress.Map" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:alpha="0.99"
            android:background="@android:color/darker_gray"
            android:color="#834d5f"
            android:onClick="openContact"
            android:text="اتصل بنا"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/button3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button5"
            android:layout_marginTop="45dp"
            android:alpha="0.99"
            android:background="@android:color/darker_gray"
            android:color="#834d5f"
            android:onClick="openAdminProfile"
            android:text="الملف الشخصي"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:alpha="0.99"
            android:background="@android:color/darker_gray"
            android:color="#834d5f"
            android:onClick="openNotification"
            android:text="ارسال اشعار"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp" />

        <Button
            android:id="@+id/show_Location"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="fill_horizontal"
            android:onClick="Start_button (Map)"
            android:text="إبدأ الرحلة" />
    </RelativeLayout>

</FrameLayout>